{
    "compilerOptions": {
        "baseUrl": "src",
        "declaration": false,
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es7",
            "dom"
        ],
        "mapRoot": "./",
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "../dist/out-tsc",
        "sourceMap": true,
        "target": "es2015",
        "typeRoots": [
            "../node_modules/@types"
        ],
        "paths": {
            "@app/*": [
                "app/*"
            ]
        }
    },
    "files": [
        "main.ts",
        "polyfills.ts"
    ],
    "include": [
        "src/**/*.d.ts"
    ]
}
