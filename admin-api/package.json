{
  "name": "kazuku-admin-api",
  "version": "0.0.1",
  "description": "",
  "author": "Tim Hardy",
  "license": "Apache-2.0",
  "main": "index.js",
  "scripts": {
    "comment": "if below starts acting up -  https://stackoverflow.com/questions/37979489/how-to-watch-and-reload-ts-node-when-typescript-files-change",
    "start": "ts-node-dev --poll src/index.ts",
    "clean": "rm -rf dist",
    "tsc": "tsc",
    "build": "npm-run-all -s clean tsc",
    "build:prod": "tsc --project ./tsconfig.prod.json",
    "test": "jest --watchAll --no-cache --verbose",
    "test:ci": "jest --json --outputFile=test-results.json"
  },
  "imports": {
    "#root/*": "./src/*.ts",
    "#common/*": "./src/common/*.ts",
    "#features/*": "./src/features/*.ts",
    "#server/*": "./src/server/*.ts",
    "#test/*": "./src/test/*.ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./src/test/setup.ts"
    ],
    "moduleNameMapper": {
      "^#root/(.*)$": "<rootDir>/src/$1",
      "^#common/(.*)$": "<rootDir>/src/common/$1",
      "^#features/(.*)$": "<rootDir>/src/features/$1",
      "^#server/(.*)$": "<rootDir>/src/server/$1",
      "^#test/(.*)$": "<rootDir>/src/test/$1"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ]
  },
  "dependencies": {
    "@kazuku-cms/common": "^0.0.18",
    "@types/express": "^4.17.21",
    "cookie-parser": "^1.4.6",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "joi": "^17.13.1",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "mongodb": "^6.6.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.8",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.3.0",
    "npm-run-all": "^4.1.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.4"
  }
}
